generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id               String            @id @default(cuid())
  email            String            @unique
  name             String?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  profile          UserProfile?
  challengeProgress ChallengeProgress?
  journalEntries   JournalEntry[]
  dailyTrackers    DailyTracker[]
  habitTrackers    HabitTracker[]
  routineItems     RoutineItem[]
  visionBoardImages VisionBoardImage[]
}

model UserProfile {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  theme           String   @default("light")
  notificationsEnabled Boolean @default(true)
  dailyReminderEnabled Boolean @default(true)
  reminderTime    String   @default("09:00")
  glowUpStartDate DateTime?
  totalGlowUpDays Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model ChallengeProgress {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  currentDay      Int      @default(1)
  completedDays   String   @default("")
  dayNotes        String   @default("")
  startedAt       DateTime @default(now())
  completedAt     DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model JournalEntry {
  id               String   @id @default(cuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date             DateTime @default(now())
  content          String
  guidedAnswers    String?
  feeling          String?
  glowMoment       String?
  learning         String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([userId, date])
}

model DailyTracker {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date            DateTime @default(now())
  hydration       Int      @default(0)
  hydrationGoal   Int      @default(8)
  sleepHours      Float?
  sleepQuality    String?
  mood            String?
  activity        String?
  activityMinutes Int?
  skincareDone    Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId, date])
}

model HabitTracker {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date            DateTime @default(now())
  habitName       String
  completed       Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId, date])
}

model RoutineItem {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title       String
  description String?
  time        String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}

model VisionBoardImage {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  imageUrl  String
  caption   String?
  position  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model BonusContent {
  id          String   @id @default(cuid())
  title       String
  type        String
  content     String?
  audioUrl    String?
  pdfUrl      String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}